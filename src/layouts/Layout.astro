---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="En Colegio Alcázares de Ñuble, nos dedicamos a formar futuras fortalezas en un gran ambiente educativo. Ofrecemos una educación integral, desarrollo personal y valores, además de variadas actividades extracurriculares que preparan a nuestros estudiantes para enfrentar los retos del futuro con confianza y habilidades." />
		<meta name="viewport" content="width=device-width" />
		<meta name="keywords" content="Colegio Alcázares de Ñuble, Educacion, Colegio, Educacion Parvularia, Chillan, Ñuble, Chile, Formando Futuras Fortalezas"/>
		<meta name="copyright" content="Colegio Alcazares de Ñuble" />
		<meta name="author" content="Gerson Contreras Henriquez"/>
		<meta name="robots" content="index, follow" />
		<link rel="icon" type="image/svg+xml" href="../image.png" />
		<meta name="generator" content={Astro.generator} />
		<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
		<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
		
		<title>{title}</title>
	</head>

	<!-- Google Analytics -->
	<script async src="https://www.googletagmanager.com/gtag/js?id=G-5LPQW446WF"></script>
	<script>
		// Definir la interfaz de dataLayer para evitar errores de tipo
		declare global {
		interface Window {
			dataLayer: any[];
		}
		}

		window.dataLayer = window.dataLayer || [];
		function gtag(...args: any[]) {
		window.dataLayer.push(args);
		}

		// Inicializar Google Analytics
		gtag('js', new Date());
		gtag('config', 'G-5LPQW446WF');

	</script>

	<body class="bg-[#eee]">
		<slot />

		<script src="https://unpkg.com/flowbite@1.4.0/dist/flowbite.js"></script>
	</body>
</html>




